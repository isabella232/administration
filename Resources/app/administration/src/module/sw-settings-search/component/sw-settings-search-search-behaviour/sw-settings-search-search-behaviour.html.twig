{% block sw_settings_search_search_behaviour %}
    <sw-card
        :title="$tc('sw-settings-search.generalTab.labelSearchBehaviour')"
        :isLoading="isLoading">
        {% block sw_settings_search_search_behaviour_title %}
            <label class="sw-settings-search__search-behaviour-title">
                {{ $tc('sw-settings-search.generalTab.textTitleSearchBehaviour') }}
            </label>
        {% endblock %}

        {% block sw_settings_search_search_behaviour_condition %}
            <sw-radio-field
                v-model="searchBehaviourConfigs.andLogic"
                class="sw-settings-search__search-behaviour-condition"
                block
                :options="conditionsOptions">
            </sw-radio-field>
        {% endblock %}

        {% block sw_settings_search_search_behaviour_search_term_length %}
            <sw-number-field
                v-model="searchBehaviourConfigs.minSearchLength"
                class="sw-settings-search__search-behaviour-term-length"
                :label="$tc('sw-settings-search.generalTab.labelMinimalSearchTerm')"
                :min="min"
                :max="max">
            </sw-number-field>
        {% endblock %}
    </sw-card>
{% endblock %}
