{% block sw_order_create_credit %}
    <sw-card class="sw-order-create-credit">
        {% block sw_order_create_credit_container %}
            <sw-container
                class="sw-order-create-products-container"
                gap="0px 10px"
                :columns="'minmax(300px, 1fr)'"
            >
                {% block sw_order_create_credit_credit_name %}
                    <sw-text-field
                        v-model="creditName"
                        :label="$tc('sw-order.createModal.credit.labelCreditName')"
                        :placeholder="$tc('sw-order.createModal.credit.placeholderCreditName')"
                    />
                {% endblock %}

                <sw-container
                    class="sw-order-create-products-container"
                    gap="0px 10px"
                    :columns="'1fr 1fr'"
                >
                    {% block sw_order_create_credit_price %}
                        <sw-text-field
                            v-model="creditPrice"
                            :label="$tc('sw-order.createModal.credit.labelCreditAmountNet')"
                            :placeholder="$tc('sw-order.createModal.credit.placeholderAmountNet')"
                        />
                    {% endblock %}
                    {% block sw_order_create_credit_vat %}
                        <sw-text-field
                            v-model="creditVat"
                            disabled
                            :label="$tc('sw-order.createModal.credit.labelCreditVat')"
                        />
                    {% endblock %}
                </sw-container>
            </sw-container>
        {% endblock %}
    </sw-card>
{% endblock %}
