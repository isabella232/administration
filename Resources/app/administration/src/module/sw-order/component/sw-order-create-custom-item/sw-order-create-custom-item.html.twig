{% block sw_order_create_custom_item %}
    <sw-card class="sw-order-create-custom-item">
        {% block sw_order_create_custom_item_container %}
            <sw-container
                class="sw-order-create-products-container"
                gap="0px 10px"
                :columns="'minmax(300px, 1fr)'"
            >
                {% block sw_order_create_custom_item_name %}
                    <sw-text-field
                        v-model="item.label"
                        :label="$tc('sw-order.createModal.customItem.labelName')"
                        :placeholder="$tc('sw-order.createModal.customItem.labelName')"
                    />
                {% endblock %}

                <sw-container
                    class="sw-order-create-products-container"
                    gap="0px 10px"
                    :columns="'1fr 1fr'"
                >
                    {% block sw_order_create_custom_item_price_net %}
                    <sw-text-field
                        v-model="item.price"
                        :label="unitPriceLabel"
                        :placeholder="placeholderLabel"
                    />
                    {% endblock %}

                    {% block sw_order_create_custom_item_amount %}
                    <sw-text-field
                        v-model="item.quantity"
                        :label="$tc('sw-order.createModal.customItem.labelAmount')"
                    />
                    {% endblock %}

                    {% block sw_order_create_custom_item_vat %}
                    <sw-entity-single-select
                        v-model="tax"
                        entity="tax"
                        :label="$tc('sw-order.createModal.customItem.labelVat')"
                    />
                    {% endblock %}

                    {% block sw_order_create_custom_item_total %}
                    <sw-text-field
                        v-model="item.itemTotal"
                        entity="tax"
                        disabled
                        :label="$tc('sw-order.createModal.customItem.labelTotal')"
                    />
                    {% endblock %}
                </sw-container>

            </sw-container>
        {% endblock %}
    </sw-card>
{% endblock %}
