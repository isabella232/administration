{% block sw_settings_import_export_view_profile %}
    <div class="sw-settings-import-export-view-profiles">
        {% block sw_settings_import_export_view_profile_profiles %}
            <sw-card title="Profiles" class="sw-settings-import-export-view-profiles__grid-card">

                {% block sw_settings_import_export_view_profile_profiles_toolbar %}
                    <div class="sw-settings-import-export-view-profiles__toolbar">
                        {% block sw_settings_import_export_view_profile_profiles_toolbar_search_field %}
                            {# TODO: implement search functionality #}
                            <sw-simple-search-field
                                size="small"
                                variant="form"
                                 v-model="searchTerm"
                                 @search-term-change="onSearch">
                            </sw-simple-search-field>
                        {% endblock %}

                        {% block sw_settings_import_export_view_profile_profiles_toolbar_add_new_profile %}
                            <sw-button
                                variant="ghost"
                                :disabled="isLoading"
                                @click="onAddNewProfile"
                                size="small">
                                {{ $tc('sw-settings-import-export.profile.addNewProfileLabel') }}
                            </sw-button>
                        {% endblock %}
                    </div>
                {% endblock %}

                {% block sw_settings_import_export_view_profile_profiles_listing %}
                    {# TODO: add context menu and change to profiles #}
                    <sw-entity-listing
                        slot="grid"
                        :repository="profileRepository"
                        :items="profiles"
                        :isLoading="isLoading"
                        :columns="profilesColumns"
                        :showSettings="false"
                        :showSelection="false"
                        :allowColumnEdit="false"
                        :fullPage="true">

                        <template #actions="{ item }">
                            {% block sw_settings_import_export_view_profile_profiles_listing_edit %}
                                <sw-context-menu-item @click="onEditProfile(item.id)">
                                    {{ $tc('sw-settings-import-export.profile.openLabel') }}
                                </sw-context-menu-item>
                            {% endblock %}

                            {% block sw_settings_import_export_view_profile_profiles_listing_duplicate %}
                                <sw-context-menu-item @click="onDuplicateProfile(item.id)">
                                    {{ $tc('sw-settings-import-export.profile.duplicateLabel') }}
                                </sw-context-menu-item>
                            {% endblock %}

                            {% block sw_settings_import_export_view_profile_profiles_listing_delete %}
                                <sw-context-menu-item variant="danger" @click="onDeleteProfile(item.id)">
                                    {{ $tc('sw-settings-import-export.profile.deleteLabel') }}
                                </sw-context-menu-item>
                            {% endblock %}
                        </template>

                    </sw-entity-listing>
                {% endblock %}
            </sw-card>
        {% endblock %}

        {% block sw_settings_import_export_view_profile_modal %}
        <sw-settings-import-export-edit-profile-modal
            :profile="selectedProfile"
            @profile-save="saveSelectedProfile"
            @profile-close="closeSelectedProfile">
        </sw-settings-import-export-edit-profile-modal>
        {% endblock %}
    </div>
{% endblock %}
