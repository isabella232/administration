<div class="sw-settings-import-export-edit-profile-modal-mapping">

    <div class="sw-settings-import-export-edit-profile-modal-mapping__toolbar">
        {# TODO: implement search functionality #}
        <sw-simple-search-field
            size="small"
            variant="form"
{#            v-model="searchTerm"#}
{#            @search-term-change="onSearch"#}
        >
        </sw-simple-search-field>

        <sw-button
            variant="ghost"
{#            :disabled="isLoading"#}
{#            @click="onAddNewProfile"#}
            size="small"
        >
            Add new mapping
        </sw-button>
    </div>

    {# TODO: add context menu and change to profiles #}
    <sw-data-grid
        :dataSource="profile.mapping"
        :compactMode="false"
        :showSelection="false"
        :columns="mappingColumns">

        <template slot="column-csvName" slot-scope="{ item }">
            <sw-field type="text" v-model="item.mappedKey"></sw-field>
        </template>

        <template slot="column-entry" slot-scope="{ item }">
            <sw-import-export-entity-path-select
                :entityType="profile.sourceEntity"
                v-model="item.key">

            </sw-import-export-entity-path-select>
        </template>

        <template #actions="{ item }">
            <sw-context-menu-item variant="danger" @click="onDeleteMapping(item.key)">
                Delete
            </sw-context-menu-item>
        </template>

    </sw-data-grid>
</div>
