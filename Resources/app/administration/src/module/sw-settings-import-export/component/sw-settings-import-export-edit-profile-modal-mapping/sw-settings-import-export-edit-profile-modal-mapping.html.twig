<div class="sw-settings-import-export-edit-profile-modal-mapping">

    <div class="sw-settings-import-export-edit-profile-modal-mapping__toolbar">
        {# TODO: implement search functionality #}
        <sw-simple-search-field
            size="small"
            variant="form"
{#            v-model="searchTerm"#}
{#            @search-term-change="onSearch"#}
        >
        </sw-simple-search-field>

        <sw-button
            variant="ghost"
{#            :disabled="isLoading"#}
{#            @click="onAddNewProfile"#}
            size="small"
        >
            Add new mapping
        </sw-button>
    </div>

    {# TODO: add context menu and change to profiles #}
    <sw-data-grid
        :dataSource="[
            { id: '123', csvName: 'Gross price', entry: 'prices.id'},
            { id: '456', csvName: 'Product name', entry: 'name'},
            { id: '789', csvName: 'Categories', entry: 'categories.id'},
            { id: '112', csvName: 'Manufacturer', entry: 'manufacturer.id'},
        ]"
        :compactMode="false"
        :showSelection="false"
        :columns="mappingColumns">

        <template slot="column-csvName" slot-scope="{ item }">
            <sw-field type="text" v-model="item.csvName"></sw-field>
        </template>

        <template slot="column-entry" slot-scope="{ item }">
            <sw-single-select
                v-model="item.entry"
                :options="[
                    { value: 'prices.id', label: 'prices.id' },
                    { value: 'name', label: 'name' },
                    { value: 'categories.id', label: 'categories.id' },
                    { value: 'manufacturer.id', label: 'manufacturer.id' },
                ]"
            ></sw-single-select>
        </template>

        <template #actions="{ item }">
            <sw-context-menu-item variant="danger" @click="onDeleteMapping(item.id)">
                Delete
            </sw-context-menu-item>
        </template>

    </sw-data-grid>
</div>
