{% block sw_sales_channel_google_terms_verification %}
    <div class="sw-sales-channel-google-terms-verification">
        {% block sw_sales_channel_google_terms_verification_top %}
            <div class="sw-sales-channel-google-terms-verification__top">

                {% block sw_sales_channel_google_terms %}
                    <strong>{{ $tc('sw-sales-channel.modalGooglePrograms.step-6.titleTerms') }}</strong>
                    <p class="sw-sales-channel-google-terms-verification__description">
                        {{ $tc('sw-sales-channel.modalGooglePrograms.step-6.titleTermsDescription') }}
                        <sw-sales-channel-detail-protect-link
                            :href="$tc('sw-sales-channel.modalGooglePrograms.step-6.textMerchantTermsUrl')">
                            {{ $tc('sw-sales-channel.modalGooglePrograms.step-6.textMerchantTerms') }}
                        </sw-sales-channel-detail-protect-link>,

                        <sw-sales-channel-detail-protect-link
                            :href="$tc('sw-sales-channel.modalGooglePrograms.step-6.textShoppingAdsPolicyUrl')">
                            {{ $tc('sw-sales-channel.modalGooglePrograms.step-6.textShoppingAdsPolicy') }}
                        </sw-sales-channel-detail-protect-link>

                        {{ $tc('sw-sales-channel.modalGooglePrograms.step-6.textAnd') }}
                        <sw-sales-channel-detail-protect-link
                            :href="$tc('sw-sales-channel.modalGooglePrograms.step-6.textGoogleAdsTermsUrl')">
                            {{ $tc('sw-sales-channel.modalGooglePrograms.step-6.textGoogleAdsTerms') }}
                        </sw-sales-channel-detail-protect-link>
                    </p>
                {% endblock %}

                {% block sw_sales_channel_google_terms_agree_checkbox %}
                    <div class="sw-sales-channel-google-terms-verification__agree-checkbox">
                        <sw-checkbox-field
                            :label="$tc('sw-sales-channel.modalGooglePrograms.step-6.textAcceptTerms')"
                            v-model="isAgree">
                        </sw-checkbox-field>
                    </div>
                {% endblock %}

            </div>
        {% endblock %}
    </div>
{% endblock %}
