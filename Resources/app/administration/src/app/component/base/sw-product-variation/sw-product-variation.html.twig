{% block sw_product_variation %}
    <span class="sw-product-variant-information"
          v-tooltip="{
            message: helpText,
            width: width,
            position: tooltipPosition,
            showDelay: showDelay,
            hideDelay: hideDelay
          }">
        {% block sw_product_variation_product_name %}
            <slot></slot>
        {% endblock %}
        {% block sw_product_variation_options %}
            <span v-if="variations.length > 0"
                v-for="(variation, index) in variations"
                class="sw-product-variation__specification"
                :key="variation.group">
                <template v-if="index === 0"> (</template>

                {% block sw_product_variation_options_text %}
                    <span>{{ variation.group }}</span>: {{ variation.option }}
                {% endblock %}

                <template v-if="index === Object.keys(variations).length - 1">) </template>
                <template v-else> | </template>
            </span>
        {% endblock %}
    </span>
{% endblock %}
