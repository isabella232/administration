{% block sw_skeleton %}
<div
    class="sw-skeleton"
    :class="classList"
>
    <template v-if="variant === 'detail'">
        <sw-skeleton-bar />

        <div class="sw-skeleton__detail-container">
            <div class="sw-skeleton__detail-container-group">
                <sw-skeleton-bar />
                <sw-skeleton-bar />
                <sw-skeleton-bar />
            </div>

            <div class="sw-skeleton__detail-container-group">
                <sw-skeleton-bar />
                <sw-skeleton-bar />
            </div>
        </div>
    </template>

    <template v-if="variant === 'gallery'">
        <sw-skeleton-bar />
    </template>

    <template v-if="variant === 'media'">
        <sw-skeleton-bar class="sw-skeleton__media-preview" />
        <sw-skeleton-bar class="sw-skeleton__media-subtitle" />
    </template>

    <template v-if="variant === 'listing'">
        <sw-skeleton-bar />
    </template>
</div>
{% endblock %}
