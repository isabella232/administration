{% block sw_cms_element_product_slider_config %}
    <div class="sw-cms-el-config-product-slider">
        {% block sw_cms_element_product_slider_config_tabs %}
            <sw-tabs class="sw-cms-el-config-product-slider__tabs" defaultItem="content">
                <template slot-scope="{ active }" >
                    {% block sw_cms_element_product_slider_config_tab_content %}
                        <sw-tabs-item :title="$tc('sw-cms.elements.sliderTabContent')"
                                      name="content"
                                      :activeTab="active">
                            {{ $tc('sw-cms.elements.sliderTabContent') }}
                        </sw-tabs-item>
                    {% endblock %}
                    {% block sw_cms_element_product_slider_config_tab_options %}
                        <sw-tabs-item :title="$tc('sw-cms.elements.sliderTabSettings')"
                                      name="settings"
                                      :activeTab="active">
                            {{ $tc('sw-cms.elements.sliderTabSettings') }}
                        </sw-tabs-item>
                    {% endblock %}
                </template>

                <template slot="content" slot-scope="{ active }">
                    {% block sw_cms_element_product_slider_config_content %}
                        <sw-container v-if="active === 'content'" class="sw-cms-el-config-product-slider__tab-content">
                            {% block sw_cms_element_product_slider_config_content_title %}
                                <sw-field type="text"
                                          :label="$tc('sw-cms.elements.labelProductSliderTitle')"
                                          :placeholder="$tc('sw-cms.elements.placeholderProductSliderTitle')"
                                          v-model="element.config.title.value">
                                </sw-field>
                            {% endblock %}

                            {% block sw_cms_element_product_slider_config_content_products %}
                                <sw-entity-multi-select
                                        class="sw-cms-el-config-product-slider__products"
                                        :label="$tc('sw-cms.elements.labelProductSliderSelection')"
                                        :placeholder="$tc('sw-cms.elements.placeholderProductSliderSelection')"
                                        localMode
                                        @input="onProductsChange"
                                        :selectedEntities="products"
                                        entity="product">
                                </sw-entity-multi-select>
                            {% endblock %}
                        </sw-container>
                    {% endblock %}

                    {% block sw_cms_element_product_slider_config_settings %}
                        <sw-container v-if="active === 'settings'" class="sw-cms-el-config-product-slider__tab-settings">

                            {% block sw_cms_element_image_slider_config_settings_display_mode %}
                                <sw-select-field :label="$tc('sw-cms.elements.labelProductDisplayMode')"
                                                 v-model="element.config.displayMode.value">
                                    <option value="standard">{{ $tc('sw-cms.elements.labelProductDisplayModeStandard') }}</option>
                                    <option value="cover">{{ $tc('sw-cms.elements.labelProductDisplayModeCover') }}</option>
                                    <option value="contain">{{ $tc('sw-cms.elements.labelProductDisplayModeContain') }}</option>
                                </sw-select-field>
                            {% endblock %}

                            {% block sw_cms_element_image_slider_config_settings_box_layout %}
                                <sw-select-field :label="$tc('sw-cms.elements.labelProductLayoutType')"
                                                 v-model="element.config.boxLayout.value">
                                    <option value="standard">{{ $tc('sw-cms.elements.labelProductLayoutTypeStandard') }}</option>
                                    <option value="image">{{ $tc('sw-cms.elements.labelProductLayoutTypeImage') }}</option>
                                    <option value="minimal">{{ $tc('sw-cms.elements.labelProductLayoutTypeMinimal') }}</option>
                                </sw-select-field>
                            {% endblock %}

                            {% block sw_cms_element_image_slider_config_settings_navigation %}
                                <sw-field type="switch"
                                          bordered
                                          :label="$tc('sw-cms.elements.labelProductSliderNavigation')"
                                          v-model="element.config.navigation.value">
                                </sw-field>
                            {% endblock %}

                            {% block sw_cms_element_image_slider_config_settings_rotate %}
                                <sw-field type="switch"
                                          bordered
                                          :label="$tc('sw-cms.elements.labelProductSliderRotate')"
                                          v-model="element.config.rotate.value">
                                </sw-field>
                            {% endblock %}

                            {% block sw_cms_element_image_slider_config_settings_border %}
                                <sw-field type="switch"
                                          bordered
                                          :label="$tc('sw-cms.elements.labelProductSliderBorder')"
                                          v-model="element.config.border.value">
                                </sw-field>
                            {% endblock %}

                            {% block sw_cms_element_image_slider_config_settings_min_width %}
                                <sw-field type="text"
                                          :label="$tc('sw-cms.elements.labelProductSliderMinWidth')"
                                          :placeholder="$tc('sw-cms.elements.placeholderProductSliderMinWidth')"
                                          v-model="element.config.elMinWidth.value">
                                </sw-field>
                            {% endblock %}
                        </sw-container>
                    {% endblock %}
                </template>
            </sw-tabs>
        {% endblock %}
    </div>
{% endblock %}