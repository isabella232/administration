{% block sw_cms_el_config_text %}
     <sw-tabs class="sw-cms-el-config-text__tabs" defaultItem="content">
    
        <template slot-scope="{ active }" >
            {% block sw_cms_el_config_text_tab_content %}
                <sw-tabs-item :title="$tc('sw-cms.elements.configTabContent')"
                              name="content"
                              :activeTab="active">
                    {{ $tc('sw-cms.elements.configTabContent') }}
                </sw-tabs-item>
            {% endblock %}
            {% block sw_cms_el_text_config_tab_options %}
                <sw-tabs-item :title="$tc('sw-cms.elements.configTabOptions')"
                              name="options"
                              :activeTab="active">
                    {{ $tc('sw-cms.elements.configTabOptions') }}
                </sw-tabs-item>
            {% endblock %}
        </template>

        <template slot="content" slot-scope="{ active }">
            {% block sw_cms_el_form_config_content %}
                <sw-container v-if="active === 'content'" class="sw-cms-el-config-form__tab-content">
                    {% block sw_cms_el_form_config_options_vertical_align %}
                    <sw-select-field label="Form type"
                        v-model="element.config.type.value"
                        placeholder="Select form type">
                        <option value="contact">Contact</option>
                        <option value="newsletter">Newsletter</option>
                    </sw-select-field>
                    {% endblock %}

                    <sw-text-field label="Title" v-model="element.config.title.value"></sw-text-field>

                    <sw-textarea-field label="Confirmation text" v-model="element.config.confirmationText.value"></sw-textarea-field>

                    <sw-cms-mapping-field label="HTML Form Builder" valueTypes="string" v-model="element.config.content">
                        <sw-text-editor v-model="element.config.content.value"
                                        {#@input="onInput"#}
                                        {#@blur="onBlur"#}
                        >
                        </sw-text-editor>

                        {#<div class="sw-cms-el-config-text__mapping-preview" slot="preview" slot-scope="{ demoValue }">#}
                            {#<div v-html="$sanitize(demoValue)"></div>#}
                        {#</div>#}
                    </sw-cms-mapping-field>

                </sw-container>
            {% endblock %}

            {% block sw_cms_el_text_config_options %}
                <sw-container v-else-if="active === 'options'" class="sw-cms-el-config-form__tab-options">
                    <p>Send to email address</p>
                    <p>Email subject line</p>
                </sw-container>
            {% endblock %}
        </template>
    </sw-tabs>
{% endblock %}
<script>
    import SwTextareaField from "../../../../../app/component/form/sw-textarea-field";
    export default {
        components: {SwTextareaField}
    }
</script>
