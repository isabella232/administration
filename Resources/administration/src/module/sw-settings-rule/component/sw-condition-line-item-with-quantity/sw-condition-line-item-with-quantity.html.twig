{% block sw_condition_fields %}
    {% block sw_condition_fields_product %}
        <sw-select :store="getProductStore()"
                   name="id"
                   :id="condition.id"
                   :required="true"
                   class="field field--select field--main has--arrow"
                   v-model="condition.value.id">
        </sw-select>
    {% endblock %}
    {% block sw_condition_fields_operator %}
        <sw-select name="operator"
                   id="createId()"
                   itemValueKey="identifier"
                   displayName="label"
                   :store="operators"
                   :required="true"
                   v-model="condition.value.operator"
                   class="field field--select has--arrow">
        </sw-select>
    {% endblock %}
    {% block sw_condition_fields_value %}
        <sw-field type="number"
                  name="quantity"
                  step="1"
                  class="field field--main"
                  v-model="condition.value.quantity">
        </sw-field>
    {% endblock %}
{% endblock %}
