{% block sw_condition_base_fields %}
    {% block sw_condition_date_range_field_use_time %}
        <sw-field type="switch"
                  name="useTime"
                  :label="$tc('global.sw-condition.condition.dateRangeRule.useTime')"
                  v-model="useTime"
                  class="has--arrow">
        </sw-field>
    {% endblock %}
    {% block sw_condition_date_range_field_from_date %}
        <sw-field type="date"
                  :dateType="condition.value.useTime ? 'datetime' : 'date'"
                  name="fromDate"
                  :config="datepickerConfig"
                  v-model="fromDate"
                  class="field--main field--from-date has--arrow">
        </sw-field>
    {% endblock %}
    {% block sw_condiiton_date_range_field_to_date %}
        <sw-field type="date"
                  :dateType="condition.value.useTime ? 'datetime' : 'date'"
                  name="toDate"
                  :config="datepickerConfig"
                  v-model="toDate"
                  class="field--main field--to-date">
        </sw-field>
    {% endblock %}
{% endblock %}
