{% block sw_condition_fields %}
    {% block sw_condition_fields_value %}
        <sw-field type="switch"
                  name="useTime"
                  :label="$tc('global.sw-condition.condition.dateRangeRule.useTime')"
                  v-model="useTime"
                  class="field--switch has--arrow">
        </sw-field>
        <sw-field type="date"
                  :dateType="condition.value.useTime ? 'datetime' : 'date'"
                  name="fromDate"
                  :config="datepickerConfig"
                  v-model="fromDate"
                  class="field--main field--date field--from-date has--arrow">
        </sw-field>
        <sw-field type="date"
                  :dateType="condition.value.useTime ? 'datetime' : 'date'"
                  name="toDate"
                  :config="datepickerConfig"
                  v-model="toDate"
                  class="field--main field--date field--to-date">
        </sw-field>
    {% endblock %}
{% endblock %}
