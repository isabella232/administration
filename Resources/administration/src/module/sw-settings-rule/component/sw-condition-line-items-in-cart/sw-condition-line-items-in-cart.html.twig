{% block sw_condition_fields %}
    {% block sw_condition_fields_operator %}
        <sw-select name="operator"
                   id="createId()"
                   itemValueKey="identifier"
                   displayName="label"
                   :store="operators"
                   :required="true"
                   v-model="condition.value.operator"
                   class="field field--select has--arrow">
        </sw-select>
    {% endblock %}
    {% block sw_condition_fields_value %}
        <sw-condition-value multi
                            name="identifiers"
                            :id="condition.id"
                            :store="getProductStore()"
                            class="field field--main field--multi"
                            v-model="condition.value.identifiers">
        </sw-condition-value>
    {% endblock %}
{% endblock %}
