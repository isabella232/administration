{% block sw_first_run_wizard_shopware_account %}
    <div class="sw-first-run-wizard-shopware-account">
        <sw-container columns="1fr 1fr">
            <img class="sw-first-run-wizard-shopware-account__illustration" :src="'/administration/static/img/first-run-wizard/shopware-account.svg' | asset">
            <div>
                <h5 class="headline">Shopware Account</h5>
                <p class="message">The Shopware ID is your username for the login to the Shopware account and other shopware services.
                </p>
                <p class="create-account">You don't have an account yet?  <a class="external-link" :href="$tc('sw-first-run-wizard.store-login.registerAccountUrl')" target="_blank">Create new account</a></p>
                <div class="input-fields">
                    <sw-field type="text"
                              name="shopwareId"
                              validation="required"
                              :label="'Shopware ID'"
                              v-model="shopwareId">
                    </sw-field>
                </div>

                <div class="input-fields">
                    <sw-password-field v-model="password"
                        type="password"
                        label="Password"
                        placeholder="">
                    </sw-password-field>
                </div>
                <p class="forgot-password"><a class="external-link" :href="$tc('sw-first-run-wizard.store-login.forgotPasswordUrl')"
                    target="_blank">Forgot password?</a></p>

                <div v-if="accountError"
                     class="sw-first-run-wizard-shopware-account__error">
                    <sw-alert :title="$tc('sw-first-run-wizard.error.titleLoginDataInvalid')"
                     variant="error"
                     appearance="notification">
                        {{ $tc('sw-first-run-wizard.error.messageLoginDataInvalid') }}
                    </sw-alert>
                </div>
            </div>
        </sw-container>
    </div>
{% endblock %}
