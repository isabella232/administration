{% block sw_settings_shipping_detail %}
    <sw-page class="sw-settings-shipping-detail">

        {% block sw_settings_shipping_detail_header %}
            <template slot="smart-bar-header">
                <h2 v-if="placeholder(shippingMethod, 'name', false)">{{ placeholder(shippingMethod, 'name', shippingMethod.name) }}</h2>
                <h2 v-else>{{ $tc('sw-settings-shipping.detail.textHeadline') }}</h2>
            </template>
        {% endblock %}

        {% block sw_settings_shipping_detail_actions %}
            <template slot="smart-bar-actions">
                {% block sw_settings_shipping_detail_actions_abort %}
                    <sw-button :disabled="shippingMethod.isLoading" :routerLink="{ name: 'sw.settings.shipping.index' }">
                        {{ $tc('sw-settings-shipping.detail.buttonCancel') }}
                    </sw-button>
                {% endblock %}

                {% block sw_settings_shipping_detail_actions_save %}
                    <sw-button variant="primary" :disabled="shippingMethod.isLoading" @click.prevent="onSave">
                        {{ $tc('sw-settings-shipping.detail.buttonSave') }}
                    </sw-button>
                {% endblock %}
            </template>
        {% endblock %}

        {% block sw_settings_shipping_detail_language_switch %}
            <sw-language-switch slot="language-switch"
                                @on-change="onChangeLanguage"
                                :saveChangesFunction="saveOnLanguageChange"
                                :abortChangeFunction="abortOnLanguageChange">
            </sw-language-switch>
        {% endblock %}

        {% block sw_settings_shipping_detail_content %}
            <sw-card-view slot="content">

                {% block sw_settings_shipping_detail_content_tabs %}
                    <sw-tabs class="sw-product-detail-page__tabs">
                        {% block sw_settings_shipping_detail_content_tabs_general %}
                            <sw-tabs-item :route="{ name: 'sw.settings.shipping.detail.base', params: { id: $route.params.id } }"
                                          :title="$tc('sw-settings-shipping.detail.tabGeneral')">
                                {{ $tc('sw-settings-shipping.detail.tabGeneral') }}
                            </sw-tabs-item>
                        {% endblock %}

                        {% block sw_settings_shipping_detail_content_tabs_advanced_prices %}
                            <sw-tabs-item :route="{ name: 'sw.settings.shipping.detail.advancedPrices', params: { id: $route.params.id } }"
                                          :title="$tc('sw-settings-shipping.detail.tabAdvancedPrices')">
                                {{ $tc('sw-settings-shipping.detail.tabAdvancedPrices') }}
                            </sw-tabs-item>
                        {% endblock %}
                    </sw-tabs>
                {% endblock %}

                {% block sw_settings_shipping_detail_content_card %}
                    <router-view :shippingMethod="shippingMethod">
                    </router-view>
                {% endblock %}
            </sw-card-view>
        {% endblock %}
    </sw-page>
{% endblock %}
