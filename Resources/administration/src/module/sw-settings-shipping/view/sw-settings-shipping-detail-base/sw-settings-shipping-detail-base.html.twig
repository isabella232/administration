{% block sw_settings_shipping_detail_base %}
    <sw-card :title="$tc('sw-settings-shipping.detail.tabGeneral')"
             :isLoading="shippingMethod.isLoading">
        {% block sw_settings_shipping_detail_base_content_field_name %}
            <sw-field type="text"
                      :label="$tc('sw-settings-shipping.detail.labelName')"
                      :placeholder="placeholder(shippingMethod, 'name', $tc('sw-settings-shipping.detail.placeholderName'))"
                      v-model="shippingMethod.name">
            </sw-field>
        {% endblock %}
        {% block sw_settings_shipping_detail_base_content_field_description %}
            <sw-textarea-field
                        :value="shippingMethod.description"
                        :label="$tc('sw-settings-shipping.detail.labelDescription')"
                        :placeholder="placeholder(shippingMethod, 'description', $tc('sw-settings-shipping.detail.placeholderDescription'))"
                        v-model="shippingMethod.description">
            </sw-textarea-field>
        {% endblock %}
        <sw-container columns="repeat(auto-fit, minmax(250px, 1fr)" gap="0px 30px">
            {% block sw_settings_shipping_detail_base_content_field_active %}
                <sw-field type="checkbox"
                          :label="$tc('sw-settings-shipping.detail.labelActive')"
                          v-model="shippingMethod.active">
                </sw-field>
            {% endblock %}

            {% block sw_settings_shipping_detail_base_content_field_bind_shipping_free %}
                <sw-field type="checkbox"
                          :label="$tc('sw-settings-shipping.detail.labelBindShippingfree')"
                          v-model="shippingMethod.bindShippingfree">
                </sw-field>
            {% endblock %}
        </sw-container>

        <sw-container columns="repeat(auto-fit, minmax(250px, 1fr)" gap="0px 30px">
            {% block sw_settings_shipping_detail_base_content_field_min_delivery_time %}
                <sw-field type="number"
                          :label="$tc('sw-settings-shipping.detail.labelMinDeliveryTime')"
                          v-model="shippingMethod.minDeliveryTime">
                </sw-field>
            {% endblock %}

            {% block sw_settings_shipping_detail_base_content_field_max_delivery_time %}
                <sw-field type="number"
                          :label="$tc('sw-settings-shipping.detail.labelMaxDeliveryTime')"
                          v-model="shippingMethod.maxDeliveryTime">
                </sw-field>
            {% endblock %}
        </sw-container>

        {% block sw_settings_shipping_detail_base_content_field_comment %}
            <sw-text-field
                :value="shippingMethod.comment"
                :label="$tc('sw-settings-shipping.detail.labelComment')"
                :placeholder="placeholder(shippingMethod, 'comment', $tc('sw-settings-shipping.detail.placeholderComment'))"
                v-model="shippingMethod.comment">
            </sw-text-field>
        {% endblock %}

        {% block sw_settings_shipping_detail_base_content_rule_store %}
            <sw-select multi :store="ruleStore"
                       :label="$tc('sw-settings-shipping.detail.labelSetRules')"
                       :associationStore="shippingMethodRuleAssociation"
                       v-model="shippingMethod.availabilityRules"
                       id="rules">
            </sw-select>
        {% endblock %}
    </sw-card>
{% endblock %}
