{% block sw_condition_field_condition %}
{% endblock %}

{% block sw_condition_fields %}
    <sw-select v-for="definition, index in definitions"
               :key="index"
               :store="getDefinitionStore(definition)"
               v-model="fieldPath[index]"
               itemValueKey="name"
               :id="createId()"
               class="field--condition"
               :required="true"
               @input="selectFilter(index, $event)">
    </sw-select>

    <sw-select :store="getTypeStore()"
               v-if="typeCriteria"
               v-model="type"
               :id="createId()"
               itemValueKey="type"
               displayName="name"
               :criteria="typeCriteria"
               :required="true"
               class="field--select has--arrow"
               @input="selectType">
    </sw-select>

    <sw-tagged-field v-if="isEqualsAny(actualCondition.type)"
                     v-model="multiValues"
                     class="field--multi field--main"
                     @input="updateTaggedValue">
    </sw-tagged-field>
    <template v-else-if="actualCondition.type == 'range'">
        <sw-field type="number"
                  class="field--main has--arrow"
                  v-model="condition.parameters.lte"
                  :placeholder="$tc('global.sw-condition.operator.greaterThanEquals')">
        </sw-field>
        <sw-field type="number"
                  class="field--main"
                  v-model="condition.parameters.gte"
                  :placeholder="$tc('global.sw-condition.operator.lowerThanEquals')">
        </sw-field>
    </template>
    <sw-field v-else
              type="text"
              class="field--main"
              v-model="actualCondition.value">
    </sw-field>
{% endblock %}