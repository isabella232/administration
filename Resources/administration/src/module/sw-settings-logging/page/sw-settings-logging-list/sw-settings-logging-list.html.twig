{% block sw_settings_list %}
    {% block sw_settings_logging_index %}
        <sw-page class="sw-settings-logging-list">

            {% block sw_settings_logging_list_search_bar %}
                <template slot="search-bar">
                    <sw-search-bar initialSearchType="logs"
                                   :placeholder="$tc('sw-settings-logging.general.placeholderSearchBar')"
                                   :initialSearch="term"
                                   @search="onSearch">
                    </sw-search-bar>
                </template>
            {% endblock %}

            {% block sw_settings_logging_list_smart_bar_header %}
                <template slot="smart-bar-header">
                    titel
                </template>
            {% endblock %}

            {% block sw_settings_logging_list_smart_bar_actions %}
                <template slot="smart-bar-actions">

                </template>
            {% endblock %}

            {% block sw_settings_logging_list_content %}
                <template slot="content">
                    {% block sw_settings_logging_list_content_card %}
                        {#<sw-card :isLoading="isLoading">#}

                            <sw-data-grid :dataSource="logs"
                                          :columns="logColumns"
                                          :fullPage="true"
                                          :showSettings="true"
                                          :showSelection="false"
                                          :showActions="false"
                                          :sortBy="sortBy"
                                          :sortDirection="sortDirection"
                                          :isLoading="isLoading"
                                          :allowColumnEdit="true"
                                          identifier="sw-log-list"
                                          @column-sort="onSortColumn">

                                <template slot="pagination">
                                    {% block sw_order_list_grid_pagination %}
                                        <sw-pagination :page="page"
                                                       :limit="limit"
                                                       :total="total"
                                                       :total-visible="7"
                                                       @page-change="onPageChange">
                                        </sw-pagination>
                                    {% endblock %}
                                </template>

                            </sw-data-grid>

                        {#</sw-card>#}
                    {% endblock %}
                </template>
            {% endblock %}
        </sw-page>
    {% endblock %}
{% endblock %}
