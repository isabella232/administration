{% block sw_avatar %}
    <span class="sw-avatar"
          :style="[avatarImage, avatarColor, avatarSize, avatarInitialsSize]"
          ref="swAvatar"
          role="img">
        <slot>
            {% block sw_avatar_slot_imageUrl %}
                <span v-if="!showPlaceholder" class="sw-avatar__initials">
                    {{ avatarInitials }}
                </span>
            {% endblock %}
            {% block sw_avatar_slot_placeholder %}
                <span v-if="showPlaceholder">
                    <sw-icon name="default-avatar-single"></sw-icon>
                </span>
            {% endblock %}
        </slot>
    </span>
{% endblock %}
