{% block sw_media_modal_hide %}
    <sw-modal variant="small"
              class="sw-media-modal-hide"
              @modal-close="closeHideModal($event)"
              :title="snippets.modalTitle">

        {% block sw_media_modal_body %}
            <p v-html="$sanitize(snippets.hideMessage)"></p>
        {% endblock %}

        {% block sw_media_modal_footer %}
            <template slot="modal-footer">

                {% block sw_media_modal_hide_cancel_button %}
                    <sw-button @click="closeHideModal($event)" size="small">
                        {{ $tc('global.sw-media-modal-hide.buttonCancel') }}
                    </sw-button>
                {% endblock %}

                {% block sw_media_modal_hide_confirm_button %}
                    <sw-button class="sw-media-modal-hide__confirm"
                               @click="hideSelection($event)"
                               size="small"
                               variant="primary">
                        {{ $tc('global.sw-media-modal-hide.buttonHide') }}
                    </sw-button>
                {% endblock %}

            </template>
        {% endblock %}
    </sw-modal>
{% endblock %}
