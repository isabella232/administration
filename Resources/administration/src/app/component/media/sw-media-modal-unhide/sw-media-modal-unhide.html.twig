{% block sw_media_modal_unhide %}
    <sw-modal variant="small"
              class="sw-media-modal-unhide"
              @modal-close="closeUnhideModal($event)"
              :title="snippets.modalTitle">

        {% block sw_media_modal_body %}
            <p v-html="$sanitize(snippets.unhideMessage)"></p>
        {% endblock %}

        {% block sw_media_modal_footer %}
            <template slot="modal-footer">

                {% block sw_media_modal_unhide_cancel_button %}
                    <sw-button @click="closeUnhideModal($event)" size="small">
                        {{ $tc('global.sw-media-modal-unhide.buttonCancel') }}
                    </sw-button>
                {% endblock %}

                {% block sw_media_modal_unhide_confirm_button %}
                    <sw-button class="sw-media-modal-unhide__confirm"
                               @click="unhideSelection($event)"
                               size="small"
                               variant="primary">
                        {{ $tc('global.sw-media-modal-unhide.buttonUnhide') }}
                    </sw-button>
                {% endblock %}

            </template>
        {% endblock %}
    </sw-modal>
{% endblock %}
