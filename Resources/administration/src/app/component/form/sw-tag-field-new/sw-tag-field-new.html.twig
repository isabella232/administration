{% block sw_tag_field_new %}
    <sw-multi-select class="sw-tag-field"
                     :id="entity.id"
                     multi
                     ref="swTagSelect"
                     :value="tagItems"
                     :options="options"
                     :label="label"
                     :placeholder="disabled ? null : $tc('global.sw-tag-field.placeholder')"
                     :possibleMinPosition="-1"
                     :highlightSearchTerm="true"
                     :disabled="disabled"
                     :size="size"
                     valueProperty="id"
                     labelProperty="name"
                     @search-term-change="onSearchTermChange"
                     @select-on-arrow-down="onArrowDown"
                     @search-finished="onSearchResultChange"
                     @option-click="onClickAdd"
                     @input="emitInput">

        <sw-multi-select-option v-if="term && !recentlyAdded && !tagExists"
                                slot="sw_multi_select_list_before"
                                :index="-1"
                                :disabled="false"
                                :item="{ index: -1 }"
                                class="sw-tag-field-add sw-select-option">
            {% block sw_tag_field_new_form_select_add_option_content %}
                {{ $tc('global.sw-tag-field.listItemAdd', 0, { term: term }) }}
            {% endblock %}
        </sw-multi-select-option>

    </sw-multi-select>
{% endblock %}
