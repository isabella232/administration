<div class="sw-field--switch" :class="swSwitchFieldClasses">
    <div class="sw-field--switch__content">
        <div class="sw-field--switch__input">
            <input type="checkbox"
                   :id="formFieldName || identification"
                   :name="formFieldName || identification"
                   :checked="inputState"
                   :disabled="disabled"
                   @change="onChange">
            <div class="sw-field__switch-state">
                <div class="sw-field__switch-state-knob"></div>
            </div>
        </div>

        <sw-base-field v-bind="$attrs"
                       :disabled="disabled"
                       :name="identification"
                       @inheritance-restore="$emit('inheritance-restore', $event)"
                       @inheritance-remove="$emit('inheritance-remove', $event)">
        </sw-base-field>

    </div>
    <sw-field-error :error="error"></sw-field-error>
</div>