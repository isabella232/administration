<sw-contextual-field
        class="sw-field--datepicker"
        :class="{ 'has--focus': this.isDatepickerOpen }"
        @sw-contextual-field-suffix-clicked="openDatepicker"
        v-bind="$attrs"
        :name="formFieldName"
        v-on="additionalEventListeners">

    <template #sw-field-input="{ identification }">
        <input type="text"
               ref="flatpickrInput"
               :name="identification"
               :id="identification"
               :placeholder="placeholder">
            <sw-icon v-if="!required && currentValue"
                     class="sw-field--datepicker__indicator--button"
                     name="small-default-x-line-small"
                     @click="unsetValue"
                     small>
            </sw-icon>
    </template>

    <template #sw-contextual-field-suffix>
        <sw-icon :name="suffixName" @click.stop="openDatepicker"></sw-icon>
    </template>
</sw-contextual-field>