{% block sw_text_field_input_element %}
    <input :id="id"
           type="text"
           :min="min"
           :max="max"
           :step="step"
           :validation="validation"
           :name="displayName"
           :placeholder="fieldPlaceholder"
           @input="onInput"
           @keydown.up="increaseNumberByStep"
           @keydown.down="decreaseNumberByStep"
           @change="onChange"
           v-model="currentValue"/>
{% endblock %}
